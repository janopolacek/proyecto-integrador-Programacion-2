<!-- Novedades -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class="products-title">Novedades</h2>
		</div>
		<!-- Show the "ultimos" products -->
		<% for (let i = 0; i < listadoAlfajores.length; i++) { %>
		<div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
				<a href="/products/<%=listadoAlfajores[i].id%>">
					<figure class="product-box_image">
						<img src="/images/products/<%=listadoAlfajores[i].image%>" alt="">
					</figure>
					<article class="product-box_data">
						<h2><%=listadoAlfajores[i].nombre%></h2>
						<p><%=listadoAlfajores[i].descripcion%></p>
						<p>Comentarios: 12</p>
					</article>
				</a>
			</section>
		</div>
		<% } %> 
	</div>
</div>
<!-- Show the "ultimos" products -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
		<% for (let i = 0; i < listadoAlfajores.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
							<a href="/products/<%=listadoAlfajores[i].id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%=listadoAlfajores[i].image%>" alt="">
						</figure>
						<article class="product-box_data">
							<h2><%=listadoAlfajores[i].nombre%></h2>
							<p><%=listadoAlfajores[i].descripcion%></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
		<% } %>
	</div>
	</div>
	<!-- /Más comentados -->
		

<!-- footer -->
<%-include('./partials/footer.ejs')%>
<!-- /footer -->
</body>

</html>